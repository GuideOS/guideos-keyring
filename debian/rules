#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_install:
	# Install sources file
	install -D -m 644 etc/apt/sources.list.d/guideos.sources \
		$(CURDIR)/debian/guideos-keyring/etc/apt/sources.list.d/guideos.sources
	
	# Install apt configuration
	install -D -m 644 etc/apt/apt.conf.d/90guideos-modernize-sources-notice \
		$(CURDIR)/debian/guideos-keyring/etc/apt/apt.conf.d/90guideos-modernize-sources-notice
	
	# Install GPG key to trusted.gpg.d
	install -D -m 644 etc/apt/trusted.gpg.d/guideos.asc \
		$(CURDIR)/debian/guideos-keyring/etc/apt/trusted.gpg.d/guideos.asc